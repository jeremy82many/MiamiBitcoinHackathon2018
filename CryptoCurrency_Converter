<script src="https://code.jquery.com/jquery-3.3.0.min.js"></script>

 

<select id="coinDdl" style="border-radius: 3px; border: 1px solid rgb(133, 133, 133); transition:border-color 200ms, box-shadow 200ms; border-image: none; left: 0px; top: 0px; width: 235px; height: 25px; color: rgb(156, 156, 156); font-family: Lato; font-size: 14px; position: absolute; z-index: 10; box-sizing: border-box; box-shadow: none; background-color: rgb(230, 230, 230);"></select>

 

<div id="ddlChange"></div>

 

<script>

    $(function () {

        $.ajax({

            method: "GET",

            url: "https://api.coinmarketcap.com/v1/ticker/?limit=10",

            success: function (result) {

                var emit = "<option>Choose one</option>";

                $.each(result, (index, item) => {

                    emit += "<option value=\"" + item.symbol + "," + item.price_usd + "\">" + item.symbol + " - " + item.id + "</option>";

                });

                $("#coinDdl").html(emit);

            }

        });

 

        $("#coinDdl").change(function () {

            if (this.selectedIndex == 0) {

                $("#ddlChange").html("");

                return;

            }

            var optionValue = this.value;

            var values = optionValue.split(",");

            var symbol = values[0];

            var priceUsd = values[1];

            $("#ddlChange").html("symbol=" + symbol + ", priceUsd=" + priceUsd);

        });

    });

</script>
